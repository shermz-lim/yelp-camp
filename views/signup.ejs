<% include partials/header %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <h1 class="display-4 my-5 text-center">Sign Up</h1>
            <form class="form-group" method="post" action="/signup">
                <label for="username">Username:</label>
                <input id="username" class="form-control mb-4" type="text" name="username" placeholder="username">
                <label for="password">Password:</label>
                <input id="password" class="form-control mb-4" type="password" name="password" placeholder="password">
                <button class="w-100 my-2 btn btn-info">Sign Up</button>
            </form>
            <p>
                Already have an account? <a href="/signup">Log in here.</a>
            </p>
        </div>
    </div>
    
</div>


