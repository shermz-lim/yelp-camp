<% include ../partials/header %>
    
    <div class="container">
        <h1 class="m-4 text-center">Update <%= campground.name %></h1>

        <!--form for creating new campground-->
        <div class="row flex-column">
            <form class="w-50 mx-auto" method="post" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <input required class="form-control m-2" type="text" value="<%= campground.name %>" name="campground[name]" placeholder="Name">
                <input required class="form-control m-2" type="number" value="<%= campground.price %>" name="price/night" placeholder="price" min="0.01" step="0.01">
                <input required class="form-control m-2" type="text" value="<%= campground.location %>" name="campground[location]" placeholder="Location">
                <input required class="form-control m-2" type="text" value="<%= campground.img %>" name="campground[img]" placeholder="Image Url">
                <input required class="form-control m-2" type="text" value="<%= campground.description %>" name="campground[description]" placeholder="Description">
                <input class="btn btn-primary m-2 w-40" type="submit">
            </form>
            <br>
            <div class="mx-auto">
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
        
    </div>
    
<% include ../partials/footer %>    